{
  "name": "@outgrowio/open-commerce-google-shopping-feed",
  "description": "Google Shopping XML feed generator for Mailchimp Open Commerce",
  "version": "1.0.2",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=12.14.1"
  },
  "homepage": "https://github.com/outgrow/open-commerce-google-shopping-feed",
  "url": "https://github.com/outgrow/open-commerce-google-shopping-feed",
  "email": "loan@outgrow.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outgrow/open-commerce-google-shopping-feed.git"
  },
  "author": {
    "name": "out:grow",
    "email": "loan@outgrow.io",
    "url": "https://outgrow.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/outgrow/open-commerce-google-shopping-feed/issues"
  },
  "sideEffects": false,
  "dependencies": {
    "@reactioncommerce/api-utils": "^1.16.5",
    "@reactioncommerce/logger": "^1.1.3",
    "@reactioncommerce/reaction-error": "^1.0.1",
    "entities": "^2.2.0",
    "simpl-schema": "^1.5.7",
    "string-strip-html": "^8.3.0"
  },
  "devDependencies": {
    "@reactioncommerce/eslint-config": "~2.2.0",
    "eslint": ">=7",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.10.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "semantic-release": "^17.0.4"
  },
  "scripts": {
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint ."
  },
  "eslintConfig": {
    "extends": "@reactioncommerce/eslint-config/node",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "es6": true,
      "jasmine": true
    },
    "rules": {
      "node/no-missing-import": "off",
      "node/no-missing-require": "off",
      "node/no-unsupported-features/es-syntax": "off",
      "node/no-unpublished-import": "off",
      "node/no-unpublished-require": "off"
    }
  },
  "prettier": {
    "arrowParens": "always"
  },
  "release": {
    "branches": [
      "trunk"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
